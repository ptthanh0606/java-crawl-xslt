<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>ServletDispatcher</servlet-name>
        <servlet-class>com.pt.servlets.ServletDispatcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllProductServlet</servlet-name>
        <servlet-class>com.pt.servlets.GetAllProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProductServlet</servlet-name>
        <servlet-class>com.pt.servlets.SearchProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CompareServlet</servlet-name>
        <servlet-class>com.pt.servlets.CompareServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitDataServlet</servlet-name>
        <servlet-class>com.pt.servlets.InitDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDispatcher</servlet-name>
        <url-pattern>/ServletDispatcher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllProductServlet</servlet-name>
        <url-pattern>/GetAllProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProductServlet</servlet-name>
        <url-pattern>/SearchProductServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CompareServlet</servlet-name>
        <url-pattern>/CompareServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitDataServlet</servlet-name>
        <url-pattern>/InitDataServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ServletDispatcher</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <res-ref-name>DBConnection</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>
</web-app>
